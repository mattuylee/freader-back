{
  "name": "freader",
  "version": "1.0.0",
  "private": true,
  "main": "./script/main.js",
  "scripts": {
    "test": "node ./script/test.js",
    "start": "npm run-script build && node .",
    "build": "tsc && node ./script/copy-static.js",
    "rebuild": "if [ -e ./bin ]; then rm -rf ./bin fi && npm run-script build"
  },
  "dependencies": {
    "@types/superagent": "^4.1.10",
    "cheerio": "^1.0.0-rc.3",
    "cors": "^2.8.5",
    "express": "~4.16.1",
    "iconv-lite": "^0.5.0",
    "log4js": "^6.4.0",
    "mongodb": "^3.2.7",
    "superagent": "^5.3.1",
    "superagent-charset": "^1.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.1.32",
    "@types/node": "^10.14.15",
    "chai": "^4.2.0",
    "husky": "^4.3.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.4.2",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "typescript": "^3.5.3",
    "validate-commit-msg": "^2.14.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && validate-commit-msg",
      "pre-push": "npm run-script build"
    }
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore",
        "daily",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": false,
        "multiple": false
      },
      "warnOnFail": false,
      "maxSubjectLength": 80,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "必须填写提交信息",
      "helpMessage": "",
      "autoFix": false
    }
  },
  "lint-staged": {
    "*.{html,css,scss,less,js,ts,jsx,tsx,md,json,jsonc}": "prettier --write"
  }
}
